<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_weight="0.3"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:textSize="30dp"
            android:id="@+id/txt_display_CALC"
            android:enabled="false"
            android:textAlignment="textEnd"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:layout_weight="0.7"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:textSize="20dp"
                android:id="@+id/btn_dec_CALC"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="DEC"/>

            <Button
                android:id="@+id/btn_bin_CALC"
                android:textSize="20dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="BIN"/>

            <Button
                android:id="@+id/btn_delete_CALC"
                android:textSize="20dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="DEL"/>

            <Button
                android:textSize="30dp"
                android:id="@+id/btn_modulo_CALC"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="%"/>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_siete_CALC"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="7"/>

            <Button
                android:id="@+id/btn_ocho_CALC"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="8"/>

            <Button
                android:id="@+id/btn_nueve_CALC"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="9"/>

            <Button
                android:id="@+id/btn_div_CALC"
                android:textSize="30dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="/"/>

        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_weight="1"
                android:id="@+id/btn_cuatro_CALC"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="4"/>

            <Button
                android:layout_weight="1"
                android:id="@+id/btn_cinco_CALC"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="5"/>
            <Button
                android:layout_weight="1"
                android:id="@+id/btn_seis_CALC"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="6"/>
            <Button
                android:layout_weight="1"
                android:textSize="30dp"
                android:id="@+id/btn_mul_CALC"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="*"/>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_weight="1"
                android:id="@+id/btn_uno_CALC"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="1"/>

            <Button
                android:layout_weight="1"
                android:id="@+id/btn_dos_CALC"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="2"/>
            <Button
                android:layout_weight="1"
                android:id="@+id/btn_tres_CALC"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="3"/>
            <Button
                android:textSize="30dp"
                android:layout_weight="1"
                android:id="@+id/btn_resta_CALC"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="-"/>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_weight="1"
                android:textSize="30dp"
                android:id="@+id/btn_punto_CALC"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="."/>

            <Button
                android:layout_weight="1"
                android:id="@+id/btn_cero_CALC"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="0"/>
            <Button
                android:layout_weight="1"
                android:textSize="30dp"
                android:id="@+id/btn_igual_CALC"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="="/>
            <Button
                android:textSize="30dp"
                android:layout_weight="1"
                android:id="@+id/btn_suma_CALC"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="+"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>